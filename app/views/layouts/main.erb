<!doctype html>
<html lang="en">
  <head>
    <title>stackius</title>
    <meta charset="utf-8">

    <%= favicon_tag "favicon.ico", :type => "image/ico" %>

    <!-- Global Assets -->
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "bootstrap-responsive" %>
    <%= stylesheet_link_tag "style" %>

    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "application" %>

    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <%= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js" %>
    <![endif]-->

    <!-- Page specific assets -->
    <%= yield_content :assets %>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Stackius</a>
          <% if @user %>
            <div class="btn-group pull-right">
              <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-white icon-user"></i> <%= @user %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/<%= @user %>">Topics</a></li>
                <li><a href="/user/edit">Edit Profile</a></li>
                <li class="divider"></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          <% end %>
          <div class="nav-collapse">
            <ul class="nav">
              <li><a href="/about">About</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div>
      <%= flash_tag :notice %>
    </div>

    <div class="container">
      <div class="clearfix">
        <%= yield %>
      </div>

      <hr>
      <footer>
      <%= Time.now.year %> &copy; <a href="http://devcloud.org">DevCloud</a>
        <!--
        Env: <%= Padrino.env %>
        -->
      </footer> <!-- End #footer -->
    </div> <!-- End #container -->
  </body>
</html>
