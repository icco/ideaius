<% form_tag url(:user, :edit), :method => 'post' do %>
  <%= flash_tag :notice %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :github %>
  <%= text_field_tag :github %>

  <%= label_tag :twitter %>
  <%= text_field_tag :twitter %>

  <%= submit_tag %>
<% end %>
