<h1><%= @topic.user %> / <%= @topic %></h1>

<table id="messages">
</table>

<% form_tag url(:message, :new), :method => 'post' do %>
  <p>
    <%= flash_tag :notice %>
  </p>
  <p>
    <%= hidden_field_tag :topic_id, :value => @topic.id %>
    <%= text_field_tag :text %>
    <%= submit_tag %>
  </p>
<% end %>
